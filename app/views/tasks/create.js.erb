$('#new').html("<%= j(render 'new', task: Task.new) %>");
$('#task-all-index').html("<%= j(render 'task_index', tasks: @tasks) %>");
$('#task-not-index').html("<%= j(render 'task_index', tasks: @tasks_not) %>");
$('#task-commencement-index').html("<%= j(render 'task_index', tasks: @tasks_commencement) %>");
$('#task-completion-index').html("<%= j(render 'task_index', tasks: @tasks_completion) %>");
<% if @task.errors.any? %>
  $('.new').fadeIn();
  $('#edit_index').html("<%= j(render 'edit_index', tasks: @tasks) %>");
<% end %>
$('#flash').html("<%= j(render 'layouts/flash') %>");
$('#flash').show();
setTimeout("$('#flash').fadeOut('slow')", 2000);
$('.close-modal').click(function(){
  $('.new').fadeOut();
});
$('#task-new-submit2').click(function(){
  $('.new').fadeOut();
});
