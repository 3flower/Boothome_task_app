<div class="container">
  <div class="row">
    <div class="signin-box">
      <h2 class="head-line text-center"><i class="fas fa-user-edit"></i>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "layouts/error_messages", resource: resource %>
        <div class="sigin-right col-xs-12">
          <div class="form-group col-xs-12">
            <%= f.label :"名前", class: "control-label" %><span class="required">必須</span>
            <%= f.text_field :name, autofocus: true, class: "form-control-static name" %>
          </div>

          <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス", class: "control-label" %><span class="required">必須</span>
            <%= f.text_field :email, class: "form-control-static email" %>
          </div>
          <div class="field form-group col-xs-12">
            <%= f.label :"パスワード(6文字以上)", class: "control-label" %><span class="required">必須</span>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control-static password" %>
          </div>

          <div class="field form-group col-xs-12">
            <%= f.label :"パスワード(確認用)", class: "control-label" %><span class="required">必須</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-static password_confirmation" %>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="actions text-center">
            <%= f.submit "新規登録",class: "btn btn-success submit-signin" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
