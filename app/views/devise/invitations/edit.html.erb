<div class="invitation-edit col-sm-5">
  <div class="invitation-box">

    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>
      <h2 class="invitation-h2">アカウント発行</h2>

    　<div class="field mail">
        <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "col-sm-11 from-mail", placeholder: "氏名（本名）を入力してください" %>
      </div>

      <div class="field password">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "col-sm-11 from-password", placeholder: "パスワード(6文字以上)" %>
      </div>

      <div class="field password">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-11 from-password", placeholder: "パスワード(確認)" %>
      </div>

      <div class="actions submit-invitation">
        <%= f.submit "アカウントを発行する", data: {"turbolinks" => false}, class: "btn btn-info col-sm-11" %>
      </div>
    <% end %>
  </div>
</div>
